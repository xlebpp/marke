{
  "openapi": "3.0.1",
  "info": {
    "title": "marketplaceE",
    "version": "1.0"
  },
  "paths": {
    "/api/registr": {
      "post": {
        "tags": [
          "AuthControllers"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUserDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUserDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/NewUserDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/authentic": {
      "post": {
        "tags": [
          "AuthControllers"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EnteranceUser"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EnteranceUser"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EnteranceUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/products": {
      "get": {
        "tags": [
          "Product"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ShowProducts"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ShowProducts"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ShowProducts"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EnteranceUser": {
        "required": [
          "email",
          "passwordHash"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "passwordHash": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "NewUserDto": {
        "required": [
          "dateOfBirth",
          "email",
          "passwordHash",
          "role",
          "userName"
        ],
        "type": "object",
        "properties": {
          "userName": {
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "passwordHash": {
            "minLength": 1,
            "type": "string"
          },
          "role": {
            "$ref": "#/components/schemas/RolesOfUsers"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date"
          }
        },
        "additionalProperties": false
      },
      "RolesOfUsers": {
        "enum": [
          "Master",
          "User"
        ],
        "type": "string"
      },
      "ShowProducts": {
        "required": [
          "images",
          "masterId",
          "masterName",
          "name",
          "price"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "isService": {
            "type": "boolean"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "masterId": {
            "type": "integer",
            "format": "int32"
          },
          "masterName": {
            "minLength": 1,
            "type": "string"
          },
          "images": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  }
}